{
  "expo": {
    "name": "Nafisa's Closet",
    "slug": "nafisas-closet",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "nafisascloset",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/icon.png",
    "splash": {
      "backgroundColor": "#1A0A2E",
      "image": "./assets/nc-logo.png",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nafisascloset.app",
      "buildNumber": "7",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to record hunt stories and take product photos.",
        "NSMicrophoneUsageDescription": "This app uses the microphone to record audio for hunt stories.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photos to upload product images and stories.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A0A2E"
      },
      "package": "com.nafisascloset.app",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-updates",
      "expo-apple-authentication",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#1A0A2E"
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.nafisascloset.app",
          "enableGooglePay": true
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to record hunt stories."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone for video recording."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "4fdda9d6-3456-4100-9d41-91b03b8803d2"
      },
      "router": {}
    },
    "owner": "raynmakr-inc",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/cdd3a4b9-c0dc-4701-a119-933d1cf82d76",
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    }
  }
}
